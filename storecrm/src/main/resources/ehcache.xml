<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd">

    <!-- Default Cache Configuration -->
    <defaultCache
            maxEntriesLocalHeap="1000"
            eternal="false"
            timeToIdleSeconds="600"
            timeToLiveSeconds="300"
            memoryStoreEvictionPolicy="LRU"/> <!-- Eviction policy to use when the cache is full -->

    <!-- Cache for Product entity -->
    <cache name="com.storecrm.entity.Product"
           maxEntriesLocalHeap="1000"
           timeToLiveSeconds="300"
           eternal="false"
           memoryStoreEvictionPolicy="LRU"/> <!-- Cache for Product entity -->

    <!-- Cache for Customer entity -->
    <cache name="com.storecrm.entity.Customer"
           maxEntriesLocalHeap="500"
           timeToLiveSeconds="300"
           eternal="false"
           memoryStoreEvictionPolicy="LRU"/> <!-- Cache for Customer entity -->

    <!-- Add other entity caches here as needed -->

</ehcache>
